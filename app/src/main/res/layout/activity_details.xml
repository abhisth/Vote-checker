<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".details">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/image"
        app:layout_constraintBottom_toBottomOf="@id/image"
        android:text="Details"
        android:layout_marginStart="24dp"
        android:textSize="24dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="38dp" />

    <ImageView
        android:id="@+id/image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="24dp"
            android:layout_marginTop="24dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/vlogo" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="24dp"
        app:cardBackgroundColor="@color/lightblue"
        app:layout_constraintTop_toBottomOf="@id/image"
        tools:layout_editor_absoluteX="24dp">

        <TextView
            android:id="@+id/textviewFname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="24dp"
            android:hint="Full Name"
            android:textSize="14sp" />
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="70dp"
            android:text="Father's Name :"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="110dp"
            android:text="Mother's Name :"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="150dp"
            android:text="Address :"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="190dp"
            android:text="Mobile :"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/textCtznnum"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="230dp"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:background="@color/white"
            android:hint="Citizenship number"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textviewFaname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="123dp"
            android:layout_marginTop="70dp"
            android:hint="Fathers Name"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/textviewMoname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="127dp"
            android:layout_marginTop="110dp"
            android:hint="Mothers Name"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/textviewAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="85dp"
            android:layout_marginTop="150dp"
            android:hint="Location"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/textviewMobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="75dp"
            android:layout_marginTop="190dp"
            android:hint="Mobile Number"
            android:textColor="@color/black" />


    </androidx.cardview.widget.CardView>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnBack"
        app:layout_constraintTop_toBottomOf="@id/cardView"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/custom_button"
        android:text="Back"
        android:textSize="16dp"
        android:textColor="@color/white"
        android:textAllCaps="false"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="462dp" />


    <TextView
        android:id="@+id/textVotecheck"
        app:layout_constraintTop_toBottomOf="@id/btnBack"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Voting Check"
        android:textColor="@color/lightblue"
        android:textSize="24dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>